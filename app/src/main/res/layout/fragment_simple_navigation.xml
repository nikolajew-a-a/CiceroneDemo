<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_navigation_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.simple.SimpleNavigationFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"/>

        <Button
            android:id="@+id/back_buton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>

        <Button
            android:id="@+id/replace_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replace"/>

        <Button
            android:id="@+id/forward_with_delay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward with delay"/>

        <Button
            android:id="@+id/new_root_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New root"/>

        <Button
            android:id="@+id/back_to_selection_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to selection"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>